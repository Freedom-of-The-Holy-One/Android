<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.dc.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/chose"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>

        <RadioGroup
            android:id="@+id/rg"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:id="@+id/main_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_main"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <RadioButton
                android:id="@+id/Humanities_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_Humanities"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <RadioButton
                android:id="@+id/history_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_history"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <RadioButton
                android:id="@+id/natural_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rb_natural"/>
        </RadioGroup>
        <LinearLayout
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorAccent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/main_rv"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:scrollbars="vertical">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorAccent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/had_chose"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <LinearLayout
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorAccent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/chose_rv"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:scrollbars="vertical">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/colorAccent"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <Button
                android:id="@+id/clear_data"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/clear"/>
            <Button
                android:text="@string/route"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
